<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lambda.wallet.modules.transaction.makecollection.MakeCollectionActivity">

    <include layout="@layout/title_project"/>

    <com.lambda.wallet.view.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/choose_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_15"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimens_15">

                <TextView
                    android:id="@+id/token"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="LAMB"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimens_15"
                    android:textStyle="bold"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_15"
                    android:drawableRight="@mipmap/more"
                    android:gravity="right"
                    android:text="@string/choose_token"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/dimens_15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_15"
                android:layout_marginLeft="@dimen/dimens_15"
                android:layout_marginRight="@dimen/dimens_15"
                android:background="@color/bg_color"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/dimens_15">

                <ImageView
                    android:id="@+id/qr_code"
                    android:layout_width="@dimen/dimens_150"
                    android:layout_height="@dimen/dimens_150"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:src="@color/gray_color"/>


                <TextView
                    android:id="@+id/save_qr_code"
                    android:layout_width="@dimen/dimens_180"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:background="@drawable/gray_line_coner"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimens_6"
                    android:paddingLeft="@dimen/dimens_15"
                    android:paddingRight="@dimen/dimens_15"
                    android:paddingTop="@dimen/dimens_6"
                    android:singleLine="true"
                    android:text="@string/save_qr_code"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimens_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:text="@string/address"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/dimens_14"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:text="@string/app_name"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimens_12"/>

                <TextView
                    android:id="@+id/copy"
                    android:layout_width="@dimen/dimens_180"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens_20"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:background="@drawable/gray_line_coner"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimens_6"
                    android:paddingLeft="@dimen/dimens_15"
                    android:paddingRight="@dimen/dimens_15"
                    android:paddingTop="@dimen/dimens_6"
                    android:singleLine="true"
                    android:text="@string/go_copy"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimens_14"/>
            </LinearLayout>
            <TextView
                android:id="@+id/recharge_toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_15"
                android:lineSpacingExtra="@dimen/dimens_5"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/make_collection_attation"
                android:textColor="@color/title_color"
                android:textSize="@dimen/dimens_14"/>
        </LinearLayout>
    </com.lambda.wallet.view.MyScrollview>


</LinearLayout>
