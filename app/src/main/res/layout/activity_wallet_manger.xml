<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".modules.wallet.walletmanger.WalletMangerActivity">

    <include layout="@layout/title_project"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_65"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_marginRight="@dimen/dimens_15"
            android:drawablePadding="@dimen/dimens_10"
            android:gravity="center_vertical"
            android:text="@string/wallet_name"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_16"/>

        <TextView
            android:id="@+id/wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dimens_30"
            android:text="@string/app_name"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dimens_15"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_65"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_50"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_marginRight="@dimen/dimens_15"
            android:drawablePadding="@dimen/dimens_10"
            android:gravity="center_vertical"
            android:text="@string/address"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_16"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_30"
            android:text="@string/app_name"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/txt"
            android:gravity="right|center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dimens_15"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_65"
        android:layout_marginTop="@dimen/dimens_10"
        android:background="@color/white">

        <TextView
            android:id="@+id/back_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_marginRight="@dimen/dimens_15"
            android:drawablePadding="@dimen/dimens_10"
            android:drawableRight="@mipmap/more"
            android:gravity="center_vertical"
            android:text="@string/back_up"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_16"/>
    </FrameLayout>

</LinearLayout>
