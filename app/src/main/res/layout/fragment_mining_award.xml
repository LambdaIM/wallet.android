<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lambda.wallet.modules.transaction.award.fragment.miningaward.MiningAwardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimens_15"
        android:layout_marginRight="@dimen/dimens_15">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_15"
        android:layout_marginTop="@dimen/dimens_15"
        android:text="@string/take_out_amount"
        android:textColor="@color/title_color"
        android:textSize="@dimen/dimens_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_15"
            android:layout_weight="4"
            android:text="0"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_30"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_15"
            android:layout_weight="1"
            android:gravity="right"
            android:text="LAMB"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_15"
        android:text="@string/toast_mining_award"
        android:textColor="@color/red_color"
        android:textSize="@dimen/dimens_13"/>

    <Button
        android:id="@+id/go"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:layout_marginBottom="@dimen/dimens_10"
        android:layout_marginLeft="@dimen/dimens_30"
        android:layout_marginRight="@dimen/dimens_30"
        android:layout_marginTop="@dimen/dimens_80"
        android:textAllCaps="false"
        android:background="@drawable/bg_sure_btn"
        android:text="@string/go_award"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_15"/>
    </LinearLayout>
</LinearLayout>
