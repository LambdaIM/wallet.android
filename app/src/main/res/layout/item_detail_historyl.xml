<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimens_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_44"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/from"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_13"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/transfer"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dimens_5"
            android:layout_marginRight="@dimen/dimens_5"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_13"/>
        <TextView
            android:id="@+id/to"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/history_type"
            android:text="@string/app_name"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_13"/>
    </LinearLayout>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dimens_10"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/dimens_10"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/order_green_color"
        android:textSize="@dimen/dimens_13"
        android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/line"
        android:layout_below="@id/amount"/>
</RelativeLayout>

