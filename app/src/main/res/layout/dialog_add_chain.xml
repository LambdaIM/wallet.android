<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_confirm"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_20"
            android:layout_marginRight="@dimen/dimens_20"
            android:layout_marginTop="@dimen/dimens_20"
            android:text="@string/producer_url"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dimens_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimens_15"
            android:layout_marginBottom="@dimen/dimens_15">


        <com.lambda.wallet.view.ClearEditText
            android:id="@+id/dialog_url"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="@dimen/dimens_48"
            android:layout_marginLeft="@dimen/dimens_20"
            android:background="@drawable/bg_gray_confirm"
            android:gravity="center_vertical"
            android:hint="@string/producer_ip"
            android:inputType="text"
            android:textColor="@color/title_color"
            android:textColorHint="@color/gray_color"
            android:paddingLeft="@dimen/dimens_10"
            android:paddingRight="@dimen/dimens_10"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/dimens_13"/>
            <com.lambda.wallet.view.ClearEditText
                android:id="@+id/dialog_port"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dimens_48"
                android:background="@drawable/bg_gray_confirm"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginRight="@dimen/dimens_20"
                android:gravity="center_vertical"
                android:hint="@string/producer_port"
                android:text="13659"
                android:paddingLeft="@dimen/dimens_10"
                android:paddingRight="@dimen/dimens_10"
                android:inputType="text"
                android:textColor="@color/title_color"
                android:textColorHint="@color/gray_color"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="@dimen/dimens_13"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimens_50"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_confirm_cancle"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimens_16"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line"/>

            <TextView
                android:id="@+id/dialog_confirm_sure"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="#4D7BFE"
                android:textSize="@dimen/dimens_16"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>