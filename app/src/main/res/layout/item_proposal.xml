<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog_confirm"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_marginRight="@dimen/dimens_15"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_15"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lineSpacingExtra="@dimen/dimens_5"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="5"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimens_14"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="@dimen/dimens_80"
            android:layout_height="@dimen/dimens_30"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dimens_15"
            android:background="@drawable/bg_blue_status"
            android:gravity="center"
            android:paddingBottom="@dimen/dimens_5"
            android:paddingLeft="@dimen/dimens_10"
            android:paddingRight="@dimen/dimens_10"
            android:paddingTop="@dimen/dimens_5"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_15"/>
</LinearLayout>