<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_dialog_confirm"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dimens_30"
            android:layout_marginBottom="@dimen/dimens_10"
            android:layout_marginLeft="@dimen/dimens_30"
            android:layout_marginRight="@dimen/dimens_30"
            android:gravity="center"
            android:textColor="@color/title_color"
            android:textStyle="bold"
            android:textSize="@dimen/dimens_15"/>
        <TextView
            android:id="@+id/dialog_confirm_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_30"
            android:layout_marginRight="@dimen/dimens_30"
            android:layout_marginBottom="@dimen/dimens_30"
            android:gravity="center"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dimens_15"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimens_50"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_confirm_sure"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimens_16"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <TextView
                android:id="@+id/dialog_confirm_cancle"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/dimens_16"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>